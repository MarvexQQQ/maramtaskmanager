<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="1285dp"
        android:layout_height="275dp"
        tools:layout_editor_absoluteX="-20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:text="first name "
            android:textSize="96sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="1260dp"
        android:layout_height="295dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="300dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/t2"
            android:layout_width="1259dp"
            android:layout_height="310dp"
            android:hint="last name "
            android:textColor="#000000"
            android:textSize="96sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="1270dp"
        android:layout_height="260dp"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="640dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:hint="your email"
            android:textColor="#020202"
            android:textSize="96sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="1270dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="930dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:hint="password"
            android:textSize="96sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="1255dp"
        android:layout_height="245dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="1165dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/t5"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:hint="phone number"
            android:textSize="96sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="575dp"
        android:layout_height="220dp"
        android:text="save !"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="1465dp" />

</androidx.constraintlayout.widget.ConstraintLayout>